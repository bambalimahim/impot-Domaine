        <Button x:Name="add" Content="Valider" HorizontalAlignment="Left" Margin="112,514,0,0" VerticalAlignment="Top" Width="101" Height="37" RenderTransformOrigin="0.505,1.013" Background="#FF0F6706" Click="add_Click"/>
